<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="50px"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/givenSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_marginBottom="30px"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/userInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Fill this with given sentence"
            android:textSize="20sp"
            android:text=""/>
        <TextView
            android:text="unlock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15px"
            android:layout_marginVertical="5px"
            android:textSize="24sp"
            android:paddingHorizontal="30px"
            android:background="#AABBCC"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:onClick="clickCheck"/>
    </LinearLayout>
</RelativeLayout>