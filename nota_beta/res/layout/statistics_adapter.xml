<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/listview_bg_bottom_no_padding"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/MyMapLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        
        <LinearLayout 
	        android:id="@+id/MyMapTitleLayout"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="5dp"
	        android:layout_marginLeft="15dp"
	        android:orientation="horizontal" >
	        <TextView
	            android:id="@+id/MyMapTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:textSize="14sp"
	            android:textColor="@color/preference_black" />
	        
	         <LinearLayout
	             android:layout_width="0dp"
	             android:layout_height="wrap_content"
	             android:layout_weight="1"
	             android:gravity="right"
	             android:orientation="horizontal"
	             android:padding="5dp" >
	        
		        <Spinner
				    android:id="@+id/MyMapSelect"
				    android:layout_width="wrap_content"
				    android:layout_height="38dp"
				    android:background="@drawable/statistics_spinner_bg" />
		        
				<Button
				    android:id="@+id/MyMapShare"
				    android:layout_width="40dp"
				    android:layout_height="40dp"
				    android:background="@drawable/statistics_share_icon_blue"
					android:layout_marginStart="10dp"
				    android:layout_marginLeft="10dp" />
	         </LinearLayout>
        </LinearLayout>
        
        <ImageView
            android:id="@+id/MyMap"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_below="@+id/MyMapTitleLayout" />
        
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/TextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/MainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/preference_black" />
        
        <TextView
            android:id="@+id/SubText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/preference_gray"
            android:singleLine="false"
            android:maxLines="2"
            android:paddingTop="7dp" />                
    </LinearLayout>
    
</LinearLayout>